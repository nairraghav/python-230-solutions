{% extends 'base.jinja2' %}

{% block subtitle %}All the things{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li>
        <p>{{ task.name }}</p>
        <ul>
            <li>
                {%  if task.performed %}
                    <p>Completed On: {{ task.performed.strftime('%B %-d, %Y %-I:%M %p') }}</p>
                {%  else %}
                    <p>Not Done</p>
                {%  endif %}
            </li>


            {%  if task.performed_by %}
                <li>
                    <p>Completed By: {{ task.performed_by }}</p>
                </li>
            {%  endif %}
        </ul>

    </li>
    {% endfor %}
</ul>
{% endblock content %}